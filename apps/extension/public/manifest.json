{
  "manifest_version": 3,
  "name": "PsyGuard",
  "version": "0.1.0",
  "description": "基于 Psy 协议的多链钱包 - 零知识证明 · 跨链统一账户",
  "author": "PsyGuard Team",
  "action": {
    "default_popup": "index.html",
    "default_title": "PsyGuard - 多链钱包"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inpage.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.coingecko.com/*",
    "http://localhost:3000/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
